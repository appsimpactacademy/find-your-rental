<div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h2 class="text-center">Sign Up</h2>
          </div>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :contact_number %>
                <%= f.text_field :contact_number, class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :whatsapp_number %>
                <%= f.text_field :whatsapp_number, class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2 mb-2" %>
              </div>

              <div class="form-group">
                <%= f.label :role_owner, "I want to list property", class: "mr-3 mt-2 mb-2 me-1" %>
                <%= f.radio_button :role, 'owner', id: 'role_owner', class: "me-2" %>

                <%= f.label :role_rentee, "I am looking for rental property", class: "mr-3 mt-2 mb-2 me-1" %>
                <%= f.radio_button :role, 'rentee', id: 'role_rentee' %>
              </div>

              <div class="">
                <%= f.submit "Sign up", class: "btn btn-primary mt-2 mb-2" %>
                <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary mt-2 mb-2" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>